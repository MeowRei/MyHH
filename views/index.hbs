<p >
    <button class="btn btn-outline-info btn-sm" type="button" data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false" aria-controls="multiCollapseExample1 multiCollapseExample2">Фильтр</button>
</p>
<div class="row">
    <div class="col">
        <div class="collapse multi-collapse" id="multiCollapseExample1">
            <div class="card card-body">
                <div>
                        <div>
                            <label for="">Ваш город</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                            <label class="form-check-label" for="inlineCheckbox1">Москва</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                            <label class="form-check-label" for="inlineCheckbox2">Санкт-Петербург</label>
                        </div>
                    </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="collapse multi-collapse" id="multiCollapseExample2">
            <div class="card card-body">
                    <div>
                        <div>
                            <label for="">Ваш уровень навыков</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                            <label class="form-check-label" for="inlineCheckbox1">Junior</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                            <label class="form-check-label" for="inlineCheckbox2">Middle</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                            <label class="form-check-label" for="inlineCheckbox3">Senior</label>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div> <br/>
<div class="container">
    <div class="row">
        <div class="col-sm">
            Frontend
            {{#each frontend}}
                <div class="card" style="width: 21rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{area.name}}</h6>
                        <p class="card-text">{{employer.name}}</p>
                        <p class="card-text">{{snippet.responsibility}}</p>
                        <p class="card-text">от {{salary.from}} {{salary.currency}}</p>
                        <p class="card-text">{{snippet.requirement}}</p>
                    </div>
                </div> <br/>
            {{/each}}
        </div>
        <div class="col-sm">
            Backend
            {{#each backend}}
                <div class="card" style="width: 21rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{area.name}}</h6>
                        <p class="card-text">{{employer.name}}</p>
                        <p class="card-text">{{snippet.responsibility}}</p>
                        <p class="card-text">от {{salary.from}} {{salary.currency}}</p>
                        <p class="card-text">{{snippet.requirement}}</p>
                    </div>
                </div> <br/>
            {{/each}}
        </div>
        <div class="col-sm">
            FullStack
            {{#each fullstack}}
                <div class="card" style="width: 21rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{area.name}}</h6>
                        <p class="card-text">{{employer.name}}</p>
                        <p class="card-text">{{snippet.responsibility}}</p>
                        <p class="card-text">от {{salary.from}} {{salary.currency}}</p>
                        <p class="card-text">{{snippet.requirement}}</p>
                    </div>
                </div> <br/>
            {{/each}}
        </div>
    </div>
</div>
